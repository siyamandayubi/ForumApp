<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectedToolbarMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selected_menu_shape"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:visibility="gone"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/closeSelectedMenuTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:foreground="@drawable/rip"
            android:text="{faw-times}"
            android:textColor="@color/textColorForSelectedBackground"
            android:textSize="26sp"></TextView>

        <TextView
            android:id="@+id/selectedItemsTextView"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editButton"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:foreground="@drawable/rip"
            android:text="{faw-pencil-square-o}"
            android:textAlignment="center"
            android:textColor="@color/textColorForSelectedBackground"
            android:textSize="26sp"></TextView>

        <TextView
            android:id="@+id/deleteButton"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:foreground="@drawable/rip"
            android:textAlignment="center"
            android:text="{faw-trash}"
            android:textColor="@color/textColorForSelectedBackground"
            android:textSize="26sp"></TextView>

        <TextView
            android:id="@+id/shareButton"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:textAlignment="center"
            android:foreground="@drawable/rip"
            android:text="{faw-share-alt}"
            android:textColor="@color/textColorForSelectedBackground"
            android:textSize="26sp"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lockButton"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="@drawable/rip"
                android:textAlignment="center"
                android:text="{faw-lock}"
                android:textColor="@color/textColorForSelectedBackground"
                android:textSize="26sp"
                android:visibility="gone"></TextView>

            <TextView
                android:id="@+id/unlockButton"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:clickable="true"
                android:foreground="@drawable/rip"
                android:text="{faw-unlock}"
                android:textColor="@color/textColorForSelectedBackground"
                android:textSize="26sp"
                android:visibility="gone"></TextView>

            <LinearLayout
                android:layout_width="35dp"
                android:id="@+id/lockUnLockProgressBar"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_marginRight="10dp">
                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="35px"
                    android:layout_height="40px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
